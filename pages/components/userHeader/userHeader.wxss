/* pages/components/userHeader/userHeader.wxss */
.user-header-component{
  width: 200rpx;
  height: auto;
  margin: 0 auto;
  padding-top: 62rpx;
}
.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.user-header{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  background-color: #cbc5e9;
  position: relative;
}
.wait-user{
  width: 100%;
  height: 52rpx;
  line-height: 52rpx;
  background: rgba(0, 0, 0, 0.3);
  color:#fff;
  font-size: 30rpx;
  text-align: center;
  position: absolute;
  bottom: 0;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.user-nick-name{
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #646464;
  display: block;
  line-height: 68rpx;
}
.user-win{
  width: 114rpx;
  height: 114rpx;
  position: absolute;
  left: -34rpx;
  top:-60rpx;
}